@model List<Webshop_gr02.Models.BestelRegel>

@{
    ViewBag.Title = "OverzichtBesteldeProducten";
}

<div class="content_wrap">
    <table class="table">
        <thead>
            <tr>
                <td>Product ID</td>
                <td>Naam</td>
                <td>Aantal</td>
                <td>Bedrag (in euro's)</td>
                <td>Datum</td>
                <td>Status</td>
                <td>Wijzigen</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                {
                    var count = Model.Count - 1;
                    if (i == count)
                    {
                    <tr>
                          <td>@Model[i].ID_P</td>
                          <td>@Model[i].naam</td> 
                          <td>@Model[i].aantal</td>
                          <td>@String.Format("{0:0.00}", Model[i].bedrag)</td> 
                          <td>@Model[i].datum)</td> 
                          <td>@Model[i].status</td>                      
                          <td>@Html.ActionLink("Wijzigen", "WijzigBesteldeProducten", new { ProductId = @Model[i].ID_P })</td>
                </tr>
               
                    }
                    else
                    {
                         <tr>
                          <td>@Model[i].ID_P</td>
                          <td>@Model[i].naam</td> 
                          <td>@Model[i].aantal</td>
                          <td>@String.Format("{0:0.00}", Model[i].bedrag)</td> 
                          <td>@Model[i].datum)</td> 
                          <td>@Model[i].status</td>                      
                          <td>@Html.ActionLink("Wijzigen", "WijzigBesteldeProducten", new { ProductId = @Model[i].ID_P })</td>
                              </tr>
                    }
                            
                }
            }
        </tbody>
    </table>
</div>
