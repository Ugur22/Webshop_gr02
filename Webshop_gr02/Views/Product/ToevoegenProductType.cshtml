@model Webshop_gr02.Models.ProductType
@{
    ViewBag.Title = "ToevoegenProductType";
}

<div class="content_wrap">

    <form method="post" action="/Product/ToevoegenProductType">
        <span style="color: red">@Html.ValidationMessage("toevoegen is niet gelukt")</span>
        <fieldset>
            <legend>Producttype toevoegen</legend>

            <div class="editor-label">
                Naam:
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Naam)
                @Html.ValidationMessageFor(model => model.Naam)
            </div>

            <div class="editor-label">
                Inkoopprijs:
            </div>
            <div class="editor-field">
                €    @Html.TextBoxFor(model => model.InkoopPrijs)
                @Html.ValidationMessageFor(model => model.InkoopPrijs)
            </div>

            <div class="editor-label">
                Verkoopprijs:
            </div>
            <div class="editor-field">
                €   @Html.TextBoxFor(model => model.VerkoopPrijs)
                @Html.ValidationMessageFor(model => model.VerkoopPrijs)
            </div>

            <div class="editor-label">
                Omschrijving:
            </div>
            <div class="editor-area">
                @Html.TextAreaFor(model => model.Omschrijving)
                @Html.ValidationMessageFor(model => model.Omschrijving)
            </div>

            <div class="editor-label">
                image_path:
            </div>
            <div class="editor-field">
                Select Image
                @using (Html.BeginForm("PromotieToevoegen", "Promotie", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.TextBoxFor(model => model.image_path, new { type = "file" })
                    @Html.ValidationMessageFor(model => model.image_path)
                }
                <div>
                    @ViewBag.Message
                </div>
            </div>

            <div class="editor-label">
				Zichtbaar:
			</div>
			<br>
			@Html.RadioButtonFor(model => model.Zichtbaar, "1") Ja
			@Html.RadioButtonFor(model => model.Zichtbaar, "0", new { Checked = "checked" }) Nee 
			@Html.ValidationMessageFor(model => model.Zichtbaar)

            <div class="editor-label">
                Aanbieding:
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Aanbieding) %
                @Html.ValidationMessageFor(model => model.Aanbieding)
            </div>
            <p>
                <input type="submit" value="Toevoegen" name="Command" />
            </p>
        </fieldset>
    </form>
</div>
