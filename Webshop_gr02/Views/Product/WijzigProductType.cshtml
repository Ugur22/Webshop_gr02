            <input type="text" value="@Model.Omschrijving" name="omschrijving" />
        </div>
         <div class="editor-label">
           Image
        </div>
        <div class="editor-field">
            <input type="text" value="@Model.ImagePath" name="image_path" />
        </div>
         <div class="editor-label">
           Zichtbaar
        </div>
        <div class="editor-field">
            <input type="text" value="@Model.Zichtbaar" name="zichtbaar" />
        </div>
         <div class="editor-label">
           Aanbieding
