@model List<Webshop_gr02.Models.ProductType>
@{
    ViewBag.Title = "ProductTypeOverzicht";
}
<div class="content_wrap">
    <h2>Overzicht Producttypes</h2>
  <p>@Html.ActionLink("Producttype Toevoegen", "ToevoegenProductType")</p>


     <table id="hor-minimalist-b">
        <thead>
    	    <tr>
                <th>ID_PT</th>
        	    <th>Naam</th>
                <th>InkoopPrijs</th>
                <th>VerkoopPrijs</th>
                <th>Omschrijving</th>
                <th>Zichtbaar</th>
                <th>Aanbieding</th>
                 <th>Wijzigen</th>
                 <th>Verwijderen</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr> 
                    <td>@Model[i].ID_PT</td>
                    <td>@Model[i].Naam</td>
                    <td>@Model[i].InkoopPrijs</td>
                    <td>@Model[i].VerkoopPrijs</td>
                    <td>@Model[i].Omschrijving</td>
                    <td>@Model[i].Zichtbaar</td>
                    <td>@Model[i].Aanbieding</td>
                    <td>@Html.ActionLink("wijzig", "WijzigGenre", new { ProductId = @Model[i].ID_PT})</td>
                    <td>@Html.ActionLink("verwijder", "verwijderenProductType", new { ProductId = @Model[i].ID_PT})</td>
                </tr>
            }
        </tbody>
    </table>
</div>