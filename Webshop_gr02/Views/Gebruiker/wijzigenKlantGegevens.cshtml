@model Webshop_gr02.Models.Gebruiker
@{
    ViewBag.Title = "wijzigenKlantGegevens";
}
<div class="content_wrap">
    <h2>wijzigenKlantGegevens</h2>

    @using (Html.BeginForm("wijzigenKlantGegevens", "Gebruiker", new { ID = Model.ID_G }))
    {
    <span style="color:red">@Html.ValidationMessage("wijzigen is niet gelukt")</span>
        <div class="editor-label">
            Voornaam:
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Voornaam)
            @Html.ValidationMessageFor(model => model.Voornaam) 
        </div>

        <div class="editor-label">
            Tussenvoegsels:
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Tussenvoegsel)
            @Html.ValidationMessageFor(model => model.Tussenvoegsel) 
        </div>

        <div class="editor-label">
            Achternaam:
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Achternaam)
            @Html.ValidationMessageFor(model => model.Achternaam) 
        </div>
        
        <div class="editor-label">
            Geslacht:
        </div>
        <div class="editor-field">
            @{
        if (Model.Geslacht.Equals("M") || Model.Geslacht.Equals("m"))
        {
                    @: @Html.RadioButtonFor(model => model.Geslacht, "M", new { Checked = "checked" }) Man
                    @: @Html.RadioButtonFor(model => model.Geslacht, "V") Vrouw
                }
        else if (Model.Geslacht.Equals("V") || Model.Geslacht.Equals("v"))
        {
                    @: @Html.RadioButtonFor(model => model.Geslacht, "M") Man
                    @: @Html.RadioButtonFor(model => model.Geslacht, "V", new { Checked = "checked" }) Vrouw
                }
                @Html.ValidationMessageFor(model => model.Geslacht)
            }
        </div>

        <div class="editor-label">
            Username:
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Username)
            @Html.ValidationMessageFor(model => model.Username) 
        </div>

        <div class="editor-label">
            Password:
        </div>
        <div class="editor-field"> 
            @Html.PasswordFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            Email:
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email) 
        </div>
        
        <div class="editor-label">
            Postcode:
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Klant.postcode)
            @Html.ValidationMessageFor(model => model.Klant.postcode) 
        </div>
        
        <div class="editor-label">
            Huisnummer:
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Klant.huisnummer)
            @Html.ValidationMessageFor(model => model.Klant.huisnummer) 
        </div>
        
        <button type="submit" class="btn btn-primary row_last">wijzigen</button>
    }
</div>