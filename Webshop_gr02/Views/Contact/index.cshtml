@{ 
    ViewBag.Title = "Contact"; 
}

    <script type="text/javascript"  src="http://maps.google.com/maps/api/js?sensor=false"></script>


<div class="content_wrap">
    <h2>Contact</h2>
    
    <div id="map_canvas" style="width:800px; height:400px"></div>
    
    <script type="text/javascript">

        function initialize() {
            var latlng = new google.maps.LatLng(53.238352, 6.596989);
            var options = { zoom: 18, center: latlng, mapTypeId: google.maps.MapTypeId.ROADMAP };
            var map = new google.maps.Map(document.getElementById("map_canvas"), options);
            google.maps.event.trigger(map, 'resize');

            var contentString =   '<div id="content">' +
                                  '<div id="siteNotice">' +
                                  '</div>' +
                                  '<h3 id="firstHeading" class="firstHeading">BEZOEKADRES </h3>' +
                                  '<div id="bodyContent">' +
                                  '<p>kardingerplein 1, <br />' + 
                                  '9735 aa groningen <br /><br />' +
                                  'Tel.: +31 (0)79 - 123 4567 <br />' +
                                  '(Op werkdagen van 09:00 - 17:30) <br /><br />' +
                                  'Mail to: info@intosport.nl</p>' +
                                  '</div>' +
                                  '</div>';
            
            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            var marker = new google.maps.Marker({
                position: latlng,
                map: map,
                title: "Intosport!"
            });
            google.maps.event.addListener(marker, 'click', function () {
                infowindow.open(map, marker);
            });
        }

        $(function () {
            initialize();
        }); 

    </script>
</div>