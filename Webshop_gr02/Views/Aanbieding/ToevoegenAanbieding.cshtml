@model Webshop_gr02.Models.Aanbieding
@{
    ViewBag.Title = "ToevoegenAanbiediing";
}

<h2>ToevoegenAanbiediing</h2>
<div class="content_wrap">
    <form method="post" action="/Aanbieding/ToevoegenAanbieding">
        <span style="color: red">@Html.ValidationMessage("toevoegen is niet gelukt")</span>
        <fieldset>
            <legend>Aanbiedingen toevoegen</legend>

            <div class="editor-label">
                Soort:
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.soort)
                @Html.ValidationMessageFor(model => model.soort)
                <span style="color: red">@Html.ValidationMessage("aanbiedingfout")</span>
            </div>

            <div class="editor-label">
                Percentage:
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.percentage)
                @Html.ValidationMessageFor(model => model.percentage)
            </div>

            <div class="editor-label">
                Actief:
            </div>
            <div class="editor-field">
                @Html.RadioButtonFor(model => model.actief, true) Ja
               @Html.RadioButtonFor(model => model.actief, false, new { Checked = true }) Nee
            </div>
            <p>
                <input type="submit" value="Toevoegen" name="Command" />
            </p>
        </fieldset>
    </form>
</div>
