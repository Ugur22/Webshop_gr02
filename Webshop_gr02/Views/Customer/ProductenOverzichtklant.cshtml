@model List<Webshop_gr02.Models.Product>
>
@{
    ViewBag.Title = "ProductenOverzichtklant";
}


<div class="content_wrap">
    <h2>Producten</h2>
    <div class="row">

        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail" id="collumproduct">
                    <img src="../Images/@Model[i].productType.ImagePath" id="productImage">
                    <div class="caption">

                        <ul>
                            <li>
                                <h3>@Model[i].naam</h3>
                            </li>
                            <li>Prijs:  €@Model[i].productType.VerkoopPrijs</li>
                            <li>Omschrijving:
                                <br />
                                @Model[i].productType.Omschrijving</li>
                            <li>Merk: @Model[i].productType.Merk</li>
                            <li>

                       
                                <li>Aantal: </li>
                                <select name="product">

                                    @{
                                    int y;
                                    }

                                    @for (y = 1; y < 11; y++)
                                    {
                                       
                                        <option>@( (y))</option>
                                    }
                                </select></li>

                            @{
                                    
                                    Console.WriteLine();   
                            }

                            <li id="Button">@Html.ActionLink("Bestel", "../Bestelling/ProductBestel",
                            new { id = @Model[i].ID_P, bedrag = @Model[i].productType.VerkoopPrijs }, new { @class = "btn btn-primary" })</li>
                        </ul>


                    </div>
                </div>
            </div>
                
                
        }

    </div>
</div>
