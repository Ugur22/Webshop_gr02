@model List<Webshop_gr02.Models.Product>
@{
    ViewBag.Title = "MinstVerkocht";
}


<div class="table_wrap">
    <br>
        <h2>Minst verkochte producten</h2>
        <div class="table_content">
            <div class="row">
                <div class="table_left">
                    <b>Product ID</b>
                </div>
                <div class="table_middle">
                    <b>Product Naam</b>
                </div>
                <div class="table_middle">
                    <b>Verkoopprijs in euro's</b>
                </div>
                <div class="table_right">
                    <b>Afzet</b>
                </div>
            </div>

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="row">
                    <div class="table_left">
                        
                        @Model[i].ID
                    </div>
                    <div class="table_middle">
                        @Model[i].naam
                    </div>
                    <div class="table_middle">
                        @Model[i].prijs
                    </div>
                    <div class="table_right">
                        @Model[i].afzet
                    </div>
                </div>
            }
        </div>
    </div>

