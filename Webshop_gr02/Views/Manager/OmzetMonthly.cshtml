@model List<Webshop_gr02.Models.Product>
@{
    ViewBag.Title = "Omzet_Monthly";
}
<div class="content_wrap">
    <div class="dropdown_month">
        @using (Html.BeginForm("OmzetMonthly", "Manager"))
        {
            DateTime today = DateTime.Now;
            <select name="date">
                @for (int i = 0; i < 13; i++)
                {
                    DateTime answer = today.AddMonths(-i);
                    <option value="@answer.ToString("yyyy/MM")">@answer.ToString("MMMM/yy")</option>
                }
            </select>
            <input type="submit" value="check"  class = "btn btn-primary" />
        }
    </div>
