                <th>Product Naam</th>
        	    <th>Bruto Omzet</th>
                 <th>Netto Omzet</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                {
                    var count = Model.Count - 1;
                    if (i == count)
                    {
                        <tr>


                                <td>@Model[i].naam</td> 
                          <td>  @String.Format("{0:0.00}", Model[i].BrutoOmzet)</td> 
                          <td>    @String.Format("{0:0.00}", Model[i].NettoOmzet)</td> 
                        </tr>
                 
              
                             
                   
                    }
