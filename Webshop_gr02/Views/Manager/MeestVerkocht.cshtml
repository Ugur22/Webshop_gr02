@model List<Webshop_gr02.Models.Product>
@{
    ViewBag.Title = "MeestVerkocht";
}

<div class="content_wrap">
    <div class="dropdown_month">
        @using (Html.BeginForm("MeestVerkocht", "Manager"))
        {
            DateTime today = DateTime.Now;
            <select name="date">
                @for (int i = 0; i < 13; i++)
                {
                    DateTime answer = today.AddMonths(-i);
                    <option value="@answer.ToString("yyyy/MM")">@answer.ToString("MMMM/yy")</option>
                }
            </select>
           <input type="submit" value="check" class = "btn btn-primary"  />
        }
    </div>
       <table class="table">
        <thead>
    	    <tr>
                <th>Product Naam</th>
        	    <th>Verkoopprijs in euro's</th>
                 <th>Afzet</th>
            </tr>
        </thead>
        <tbody>


            @for (int i = 0; i < Model.Count; i++)
            {
                {
                    var count = Model.Count - 1;
                    if (i == count)
                    {
                    <tr>
                               <td>@Model[i].naam</td> 
                          <td>@String.Format("{0:0.00}", Model[i].prijs)</td> 
                          <td> @Model[i].afzet</td> 
                       
                      
                </tr>
                    }
                    else
                    {
                        <tr>
                         <td>@Model[i].naam</td> 
                          <td>@String.Format("{0:0.00}", Model[i].prijs)</td> 
                          <td> @Model[i].afzet</td> 
                            </tr>
                    }
                }
            }
            </table>
        </div>
   