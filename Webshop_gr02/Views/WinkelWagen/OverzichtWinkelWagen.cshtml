@model List<Webshop_gr02.Models.BestelRegel>
@{
    ViewBag.Title = "OverzichtWinkelWagen";
}


<div class="content_wrap">

    <h2>OverzichtWinkelWagen</h2>


    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>aantal</th>
                <th>bedrag</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].product.naam</td>
                    <td>@Model[i].aantal</td>
                    <td>@Model[i].bedrag</td>
                </tr>
            }
        </tbody>
    </table>

</div>

