@using Webshop_gr02.Controllers
@using Webshop_gr02.Models
@model List<Webshop_gr02.Models.ProductType>
@{
    ViewBag.Title = "Cart";
}


<div class="content_wrap">

    <h2>Cart</h2>

    <table>
        <tr>

            <th>Option</th>
            <th>Name</th>
            <th>omschrijving</th>
            <th>Aantal</th>
            <th>sub totaal</th>
        </tr>

        @foreach (Item item in (List<Item>)Session["cart"])
        {
         
            <tr>
                @* <td>@Html.ActionLink("Deleten", "Delete", "ShoppingCart",
                    new { id = item.Producttype.ID_PT }, new { @class = "btn btn-primary" })</td>*@
                <td>@item.Producttype.Naam</td>
                <td>@item.Producttype.VerkoopPrijs</td>
                <td>@item.Producttype.Omschrijving</td>
                <td>@item.Quantity</td>
                <td>@(item.Producttype.VerkoopPrijs * item.Quantity)</td>
            </tr>
        }

    </table>
    <br />
    <br />
    @Html.ActionLink("Ga verder met winkelen", "ProductenOverzichtKlant")
</div>


