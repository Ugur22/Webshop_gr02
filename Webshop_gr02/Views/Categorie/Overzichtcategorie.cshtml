@model List<Webshop_gr02.Models.Categorie>

@{
    ViewBag.Title = "Overzichtcategorie";
}

<div class="content_wrap"> 
   <h2>Overzicht categorieën</h2>
    <p>@Html.ActionLink("Categorie Toevoegen", "ToevoegenCategorie", new { }, new { @class = "btn btn-primary" })</p>
            <table class="table">
        <thead>
    	    <tr>
                <th>ID catagorie</th>
        	    <th>Naam</th>
                 <th>Wijzigen</th>
                  <th>Verwijderen</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr> 
                    <td>@Model[i].ID_C</td>
                    <td>@Model[i].Naam</td>
                    <td>@Html.ActionLink("wijzig", "WijzigenCategorie", new {ID_C = @Model[i].ID_C})</td>
                    <td>@Html.ActionLink("verwijder", "VerwijderenCategorie", new { ID_C = @Model[i].ID_C})</td>
                </tr>
            }
        </tbody>
    </table>
</div>
